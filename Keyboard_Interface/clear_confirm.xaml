<Window x:Class="Keyboard_Interface.clear_confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keyboard_Interface"
        mc:Ignorable="d"
        Title="clear_confirm" Height="300" Width="750" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#D3D3D3">
    <Grid>
        <Button x:Name="yes" Content="YES" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="250" Margin="0,42,0,0" FontSize="22" FontWeight="Bold" Background="DarkGreen" Click="yes_Click"/>
        <Button x:Name="no" Content="NO" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="250" Margin="450,42,0,0" FontSize="22" FontWeight="Bold" Background="DarkRed" Click="no_Click"/>
        <Label x:Name="label" Content="Are you sure you want to clear the current text?" HorizontalAlignment="Left" Margin="147,0,0,0" VerticalAlignment="Top" FontSize="20" Width="525" FontWeight="Bold"/>
    </Grid>
</Window>
